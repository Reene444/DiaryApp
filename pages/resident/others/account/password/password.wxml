<view class="father">
<image class="bg" src="../../../../../img/resident/bg_login.png"></image>
<view class="list">
<van-cell-group inset>
  <van-field
    placeholder="请填写原密码"
    label="原密码"
    border="{{ false }}"
    bind:change="oldPassword"
  />
  <van-field
    placeholder="请填写新密码"
    label="新密码"
    border="{{ false }}"
    bind:change="newPassword"
  />
  <van-field
    placeholder="再次确认密码"
    label="确认密码"
    border="{{ false }}"
    bind:change="confirmPassword"
  />
</van-cell-group>
</view>
<view class="bt1">
  <van-button bindtap="changePassword" color="#FFC65B" size="large">确认修改</van-button>
</view>
</view>