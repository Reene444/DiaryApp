/* pages/user/announce/announce.wxss */

.swiper {
  height: calc(100vw*442/810);
  width: 85%;
  border-radius: 50rpx;
  overflow: hidden;
  margin: 30rpx auto;
  margin-bottom: 50rpx;
}


swiper {
  width: 100%;
  height: 600rpx;
}

swiper image {
  width: 100%;
  height: 600rpx;
}

.post-container {
  display: flex;
  flex-direction: column;
  border-top: 1px solid #ededed;
  background-color: #fff;
  padding: 15rpx 10rpx 15rpx 10rpx;
}

.post-author-date {
  display: flex;
  flex-direction: row;
  margin: 10rpx 0 20rpx 10rpx;
  align-items: center;
}

.post-author {
  margin-left: 20rpx;
  height: 38rpx;
  width: 28rpx;
}

.post-date {
  margin-left: 20rpx;
  font-size: 26rpx;
}

.post-title {
  font-size: 34rpx;
  font-weight: 600;
  margin-left: 20rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  color: #333;
  float: left;
}

.post-content {
  font-size: 28rpx;
  color: #666;
  letter-spacing: 2rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  max-width: 350px;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp:1;
  white-space: nowrap;
}

.post-like {
  display: flex;
  flex-direction: row;
  font-size: 26rpx;
  margin-left: 20rpx;
  align-items: center;
}

.post-like-image {
  height: 32rpx;
  width: 32rpx;
  margin-right: 16rpx;
}

.post-like-font {
  margin-right: 40rpx;
}

.title{
  flex-direction: row;
}